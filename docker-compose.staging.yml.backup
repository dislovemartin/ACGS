  # OPA Server - Open Policy Agent
  opa:
    image: openpolicyagent/opa:latest-envoy
    container_name: acgs-opa-staging
    command: ["run", "--server", "--addr", "0.0.0.0:8181", "--log-level", "info"]
    ports:
      - "8191:8181"
    networks:
      - acgs-staging
    volumes:
      - ./config/opa/policies:/policies
    healthcheck:
